<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <inset android:insetLeft="-50dp" android:insetRight="-50dp">
            <shape>
                <solid android:color="@color/seekbar_bg_color"/>
                <corners android:radius="@dimen/dp_50"/>
                <size android:height="@dimen/dp_100"/>
            </shape>
        </inset>
    </item>
    <item android:id="@android:id/progress">
        <inset android:insetLeft="-50dp" android:insetRight="-50dp">
            <clip>
                <shape>
                    <solid android:color="@color/main_theme_color"/>
                    <stroke android:width="@dimen/dp_10" android:color="@color/seekbar_bg_color"/>
                    <corners android:radius="@dimen/dp_50"/>
                    <size android:height="@dimen/dp_100"/>
                </shape>
            </clip>
        </inset>
    </item>
</layer-list>
